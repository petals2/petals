{
  "name": "petals-thorn2",
  "version": "1.0.5",
  "description": "A custom-made language inspired by TypeScript to compile straight to optimized Scratch blocks, supporting objects, structs, classes and recursive functions - all while being type safe during compile time.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepack": "yarn build",
    "test": "ava"
  },
  "author": "roobscoob",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@ava/typescript": "2",
    "ava": "^4.3.0",
    "chalk": "4.0.0",
    "petals-render": "workspace:*",
    "petals-silo": "workspace:*",
    "petals-stem": "workspace:*",
    "petals-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "files": [
    "./dist"
  ],
  "ava": {
    "typescript": {
      "rewritePaths": {},
      "compile": false
    },
    "require": [
      "ts-node/register"
    ]
  }
}
